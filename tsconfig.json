{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "types": ["node", "jest", "@testing-library/jest-dom"]
    },
    "exclude": [
        "node_modules",
        ".next",
        "out",
        "**/*.test.ts",
        "**/*.test.tsx"
    ],
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "tsconfig.lint.json"]
}
